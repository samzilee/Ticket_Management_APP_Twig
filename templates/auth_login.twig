{% extends 'base.twig' %} {% block title %}Login - TicketFlow{% endblock %} {%
block content %}
<div class="auth-root">
  <form class="auth-form" method="post" action="?page=login">
    <h2>Login</h2>
    <label for="email">Email</label>
    <input
      id="email"
      name="email"
      type="email"
      autocomplete="username"
      required
      value="{{ email|default('') }}"
    />
    <label for="password">Password</label>
    <input
      id="password"
      name="password"
      type="password"
      autocomplete="current-password"
      required
    />
    {% if error %}
    <div class="auth-error" role="alert">{{ error }}</div>
    {% endif %}
    <button class="auth-btn" type="submit">Login</button>
    <div class="auth-alt">
      <span>Don't have an account?</span>
      <a class="auth-link" href="?page=signup">Sign Up</a>
    </div>
  </form>
</div>
{% endblock %}
